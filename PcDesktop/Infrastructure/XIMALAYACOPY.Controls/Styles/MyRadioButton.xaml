<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:MControls="clr-namespace:XIMALAYACOPY.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/XIMALAYACOPY.Controls;component/Themes/MyRadioButton.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    	<Style x:Key="MetroMyRadioButton" TargetType="MControls:MyRadioButton" BasedOn="{StaticResource {x:Type MControls:MyRadioButton}}">
		<Setter Property="BorderBrush" Value="{DynamicResource AccentColorBrush}" />
		<Setter Property="IconFill" Value="White" />
		<Setter Property="SuperScriptSize" Value="50"/>
	</Style>
</ResourceDictionary>